{% extends 'base.html.twig' %}

{% block title %}Ingredients{% endblock %}

{% block body %}
    <h1>Ingredients</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ ingredient.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ ingredient.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ ingredient.price }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ ingredient.createdAt ? ingredient.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_ingredients_index') }}">back to list</a>

    <a href="{{ path('app_ingredients_edit', {'id': ingredient.id}) }}">edit</a>

    {{ include('ingredients/_delete_form.html.twig') }}
{% endblock %}
