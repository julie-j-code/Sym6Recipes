{% extends 'base.html.twig' %}

{% block title %}Hello IngredientsController!{% endblock %}

{% block body %}


<h1>{{ controller_name }}! ✅</h1>

<table class="table table-hover mt-5">
    <thead>
        <tr>
            <th scope="col">Id</th>
            <th scope="col">Nom</th>
            <th scope="col">Prix</th>
            <th scope="col">Date de création</th>
            <th scope="col">Modifier</th>
            <th scope="col">Supprimer</th>
            {# <th scope="col">Utilisateur </th> #}
                     
        </tr>
    </thead>
    <tbody>
        {% if not ingredients is same as([]) %}
    

        {% for ingredient in ingredients %}

        <tr class="table-primary">
            <th scope="row">{{ ingredient.id }}</th>
            <td>{{ ingredient.name }}</td>
            <td>{{ ingredient.price|number_format(2, '.', ',') }}
                €</td>
            <td>{{ ingredient.createdAt|date('d/m/Y') }}</td>
            {# <td>
                {% for u in ingredient.users %}
                {{ u.id}}

                {% endfor %}
            </td> #}
            <td>
                <a class="btn btn-warning" href="{{ path('admin_ingredient_edit', {'id': ingredient.id}) }}">modifier</a>
            </td>
            <td>
                {{ include('ingredients/_delete_form.html.twig') }}
                {# <a class="btn btn-danger" href="{{ path('admin_ingredient_delete', {'id': ingredient.id}) }}">supprimer</a> #}
            </td>

        </tr>
        {% endfor %}


    </tbody>
</table>

<div class="mt-3">

    {{ knp_pagination_render(ingredients, 'base/pagination.html.twig') }}
</div>

{% else %}
<buton class="btn btn-primary">Ajouter un ingrédient</buton>

{% endif %}




{% endblock %}