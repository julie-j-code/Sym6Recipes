{% extends 'base.html.twig' %}

{% block title %}Recipes{% endblock %}

{% block body %}
    <h1>Recipes</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ recipe.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ recipe.Name }}</td>
            </tr>
            <tr>
                <th>Time</th>
                <td>{{ recipe.time }}</td>
            </tr>
            <tr>
                <th>NbPeople</th>
                <td>{{ recipe.nbPeople }}</td>
            </tr>
            <tr>
                <th>Difficulty</th>
                <td>{{ recipe.difficulty }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ recipe.description }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ recipe.price }}</td>
            </tr>
            <tr>
                <th>CreatedAt</th>
                <td>{{ recipe.createdAt ? recipe.createdAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>UpdatedAt</th>
                <td>{{ recipe.updatedAt ? recipe.updatedAt|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>IsFavorite</th>
                <td>{{ recipe.isFavorite ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_recipes_index') }}">back to list</a>

    <a href="{{ path('app_recipes_edit', {'id': recipe.id}) }}">edit</a>

    {{ include('recipes/_delete_form.html.twig') }}
{% endblock %}
